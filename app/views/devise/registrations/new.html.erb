<h4>
 <span class="title">新規会員登録</span><br>
</h4>

<div class="sign up">
<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<dl>
 <div class="form-group form-inline">
  <dt><%= f.label :（姓）%></dt><br />
  <dd><%= f.text_field :last_name, autofocus: true, placeholder: "令和" %></dd>

    <dt><%= f.label :（名）%></dt><br />
    <dd><%= f.text_field :first_name, autofocus: true, placeholder: "道子"%></dd>
  </dl>
  </div>

<dl>
  <div class="form-group form-inline">
    <dt><%= f.label :セイ%></dt></br>
    <dd><%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %></dd>

    <dt><%= f.label :メイ%></dt><br />
    <dd><%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %></dd>
    </dl>
  </div>

<dl>
<div class="form-group form-inline">
    <dt><%= f.label :メールアドレス%></dt><br />
    <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example" %></dd>
  </dl>
  </div>

<dl>
 <div class="form-group form-inline">
    <dt><%= f.label :郵便番号（ハイフンなし） %></dt><br />
    <dd><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></dd>
  </div>
  </dl>

 <dl>
 <div class="form-group form-inline">
    <dt><%= f.label :住所 %></dt><br />
    <dd><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" ,:size => "60*60"%></dd>
    </dl>
  </div>

 <dl>
 <div class="form-group form-inline">

    <dt><%= f.label :電話番号 %></dt><br />
    <dd><%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000" %></dd>
    </dl>
  </div>


<dl>
  <div class="form-group form-inline">

    <dt><%= f.label :パスワード（6文字以上）%></dt>
    <% if @minimum_password_length %>
    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
    <% end %><br />
    <dt><%= f.password_field :password, autocomplete: "new-password" %></dt>
    </dl>
  </div>

 <dl>
 <div class="form-group form-inline">

    <dt><%= f.label :パスワード（確認用） %></dt><br />
    <dd><%= f.password_field :password_confirmation, autocomplete: "new-password" %></dd>
    </dl>
  </div>

  <div class="actions">
    <%= f.submit '新規登録',class:"btn btn-success" %>
  </div>
<% end %>
</div>


  <h5>
 <span class="title">既に登録済みの方</span><br>
</h5>
  <%= link_to "こちら", customer_session_path %>からログインをしてください。


