<h4>
 <span class="title">ログイン</span><br>
</h4>

<%= flash[:error] %>

 <span class="title">会員の方はこちらからログイン</span><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table class="table table-borderless">
  <tr>
    <th><%= f.label :メールアドレス %></th><br />
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" ,:size => "60*60"%></td>
  </tr>

  <tr>
    <th><%= f.label :パスワード %></th><br />
    <td><%= f.password_field :password, autocomplete: "current-password",:size => "60*60"%> </td>
  </tr>
</table>




  <div class="actions">
   <%= f.submit 'ログイン',class:"btn btn-success" %>
  </div>
<% end %>

<h6>
 <span class="title">会員登録がお済みでない方</span><br>
</h6>

  <%= link_to "こちら", new_customer_registration_path %>からログインしてください


