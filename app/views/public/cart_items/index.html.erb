<h1>ショッピングカート</h1>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
     <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill, 150, 150 %>
      　　<%= cart_item.item.name %>
      </td>
      <td><%= (cart_item.item.price * 1.1).floor %></td>
      <td><%= cart_item.amount %></td>
      <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      <td><!--% @price +=  (cart_item.item.price * 1.1).floor * cart_item.amount %--></td>
     </tr>
    <% end %>
    </tbody>
</table>

