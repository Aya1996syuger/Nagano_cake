<h1>会員情報編集</h1>

<%= form_with model:@customer,url:public_customer_path(@customer), local:true do |f| %>

 <div class="form-group">
  <label for="last_name">名前</label></br>
  <%= f.text_field :last_name %>
 </div>

 <div class="form-group">
  <label for="first_name"></label></br>
  <%= f.text_field :first_name %>
 </div>

 <div class="form-group">
  <label for="last_name_kana">フリガナ</label></br>
  <%= f.text_field :last_name_kana %>
 </div>

 <div class="form-group">
  <label for="first_name_kana"></label></br>
  <%= f.text_field :first_name_kana %>
 </div>

 <div class="form-group">
  <label for="postal_code">郵便番号</label></br>
  <%= f.text_field :postal_code %>
 </div>

 <div class="form-group">
  <label for="address">住所</label></br>
  <%= f.text_field :address %>
 </div>


 <div class="form-group">
  <label for="telephone_number">電話番号</label></br>
  <%= f.text_field :telephone_number %>
 </div>

 <div class="form-group">
  <label for="email">メールアドレス</label></br>
  <%= f.text_field :email %>
 </div>



 <div class="form-group">
  <%= f.submit '変更内容保存' %>
  </div>
<% end %>

<%= link_to "退会", public_confirm_unsubscribe_path(current_customer.id), class: "btn btn-secondary" %>