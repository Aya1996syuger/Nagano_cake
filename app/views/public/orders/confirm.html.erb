<h1>注文情報確認画面</h1>
   
<table>
   <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </thead>



  <tbody>
      <% @cart_items.each do |cart_item| %>
          <tr>
              <td>
                  <%= attachment_image_tag cart_item.item, :image, :fill, 80, 80 %>
              　　<%= cart_item.item.name %>
              </td>
              <td><%= (cart_item.item.price * 1.1).floor %></td>
              <td><%= cart_item.amount %>
              <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      <% end %>
  </tbody>
</table>


