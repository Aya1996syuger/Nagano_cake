<h1>注文情報確認画面</h1>

<table class="table table-bordered">
   <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
    </thead>
  <tbody>
      <% @items_payment = 0 %>
      <% @shopping_cost = 800 %>
      <% @cart_items.each do |cart_item| %>
          <tr>
              <td>
                  <%= attachment_image_tag cart_item.item, :image, :fill, 80, 80 %>
              　　<%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal%></td>
            <% @items_payment +=  cart_item.subtotal %>
      <% end %>
  </tbody>
 </table>

 <table class="table table-bordered">
  <thead>
        <th>送料</th>
        <th>商品合計</th>
        <th>請求額</th>
    </thead>
     <tbody>
    <td><%= @shopping_cost %></td>
    <td><%= @items_payment %></td>
    <td><%= @shopping_cost + @items_payment %></td>

     </tbody>
</table>

      <h5>支払方法<%= @order.payment_method %></h5>
      <h5>
       配送先</br>
       　〒<%= @order.postal_code %></br>
        <%#= @order.address %></br>
        <%= @order.name %>
      </h5>


    <%= form_with model:[@order], url:public_orders_path do |f| %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :postal_code %>
        <%#= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :shopping_cost %>
        <%= f.hidden_field :total_payment %>

        <%= f.submit '注文を確定する' ,class: 'btn btn-success'%>
    <% end %>

    </div>



