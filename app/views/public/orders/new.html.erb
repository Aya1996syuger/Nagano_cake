<h4>
 <span class="title">注文情報入力</span><br>
</h4>

<%= form_with model: @order, url:public_orders_path, local: true do |f| %>
  <span class="payment_method">支払い方法</span><br>
  <%=f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>

  <div class="field">
    <span class="address_type">お届け先</span><br>
    <div class="radio-inline">
      <%= f.radio_button :address, :ご自身の住所, checked: "checked" %>
      <%= f.label :ご自身の住所, class: "address_type_label" %></br>
      <%= @customer.postal_code %>
      <%= @customer.address %>
      <%#= @customer.name%>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :address, :登録済住所から選択 %>
      <%= f.label :登録済住所から選択, class: "address_type_label" %></br>
      <%= f.collection_select :address , current_customer.addresses, :id, :view_address %>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :address, :新しいお届け先%>
      <%= f.label :新しいお届け先, class: "address_type_label" %></br>

      <%= f.label :postal_code, '郵便番号(ハイフンなし）' %>
      <%= f.text_field :postal_code ,placeholder: "0000000"%></br>

      <%= f.label :address, '住所' %>
      <%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0"%></br>

      <%= f.label :name, '宛名' %>
      <%= f.text_field :name ,placeholder: "令和 道子"%></br>

      <%= f.submit '確認画面へ進む' ,class: 'btn btn-success'%>
    </div>
  </div>
<% end %>




