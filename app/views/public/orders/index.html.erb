<h4>
 <span class="title">注文情報入力</span><br>
</h4>
  <%= form_with model: @order, url:public_orders_path, local: true do |f| %>
  <span class="payment_method">支払い方法</span><br>
    <%=f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %>
  
    <div class="field">
  <span class="address_type">お届け先</span><br>
  <div class="radio-inline">
    <%= f.radio_button :address, :ご自身の住所, checked: "checked" %>
    <%= f.label :ご自身の住所, class: "address_type_label" %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button :address, :登録済住所から選択 %>
    <%= f.label :登録済住所から選択, class: "address_type_label" %>
  </div>
  <div class="radio-inline">
    <%= f.radio_button :address, :新しいお届け先%>
    <%= f.label :新しいお届け先, class: "address_type_label" %>
    
  </div>
</div>
 <% end %>




