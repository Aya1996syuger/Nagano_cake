<h4>
<span class="title">注文履歴一覧</span>
</h4>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>

    </tr>
   </thead>

  <tbody>
    <% @items_payment = 0 %>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.postal_code %><%= order.address %><%= order.name %></td>
      <td><% order.order_details.each do |order_detail| %>
  			  <%= order_detail.item.name %>
  			  <% @items_payment +=  order_detail.price * order_detail.amount %>

  			  <% end %>

  		</td>
  		<% @shopping_cost = 800 %>
      <td><%=  @items_payment + @shopping_cost %></td>
      <td><%= link_to "詳細", public_order_path(order),class: "btn btn-primary"  %></td>

    <% end %>
    </tr>
  </tbody>
</table>

