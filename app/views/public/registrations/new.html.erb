<h4>
 <span class="title">新規会員登録</span><br>
</h4>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<dl>
<table class="table table-borderless">
  <tr>
    <th><%= f.label :名前%></th><br />
    <td>
    （姓）<%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    （名） <%= f.text_field :first_name, autofocus: true, placeholder: "道子"%>
    </td>
  </tr>

  <tr>
    <th><%= f.label :フリガナ%></th></br>
    <td>
    （ｾｲ）<%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
    （ﾒｲ）<%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
    </td>
  </tr>

  <tr>
    <th><%= f.label :メールアドレス%></th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example",:size => "40*40"%></td>
  </tr>

  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %></th>
    <td><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></td>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" ,:size => "60*60"%></td>
  </tr>
  <tr>
    <th><%= f.label :電話番号 %></th>
    <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000" %></td>
  </tr>

  <tr>
    <th><%= f.label :パスワード%></th>
    <th><%= f.password_field :password, autocomplete: "new-password" %></th>
  </tr>
  <tr>
    <th><%= f.label :パスワード（確認用） %></th><br />
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
 </table>

  <div class="actions">
    <%= f.submit '新規登録',class:"btn btn-success" %>
  </div>
<% end %>
</div>


  <h5>
 <span class="title">既に登録済みの方</span><br>
</h5>
  <%= link_to "こちら", customer_session_path %>からログインをしてください。


<%= render "public/shared/error_messages", resource: resource %>
