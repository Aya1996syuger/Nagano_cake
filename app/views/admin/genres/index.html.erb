<h4>
 <span class="title">ジャンル一覧</span><br>
</h4>
<!-- form_with部分 -->
<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
  <h6>ジャンル名</h6>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>

 <div class="col-md-6">
  <table class="table">
   <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="2"></th>
     </tr>
   </thead>
    <tbody>
     <% @genres.each do |genre| %>
    　 <tr>
     　 <td>

        <%= genre.name %>
     　 </td>
     　 <td>
        <%= link_to "編集する",edit_admin_genre_path(genre), class:"btn btn-success"%>
     　 </td>
     </tr>
     <% end %>
    </tbody>
  </table>
</div>
