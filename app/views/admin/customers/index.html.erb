<span class="title">会員一覧</span><br>
 <table class="table">
    <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="4"></th>
    </tr>
   </thead>

　 <tbody>
　  <% @customers.each do |customer| %>
　　　<tr>
       <td><%= customer.id %></td>
       <td>
           <%= link_to admin_customer_path(customer.id) ,class:"name" do%>
             <%= customer.last_name%><%= customer.first_name %>
           <% end %>
       </td>
       <td><%= customer.email %></td>
       <td><% if customer.is_active == true %>
              <p class="text-green">有効</p>
           <% else %>
              <p class="text-gray">退会</p>
           <% end %>
    <% end %>
        </td>
      </tr>
   </tbody>
  </table>

  <%= paginate @customers %>
