<%= form_with model:@customer,url:admin_customer_path(@customer), local:true do |f| %>

 <div class="form-group">
  <label for="last_name">名前</label></br>
  <%= f.text_field :last_name %>
 </div>

 <div class="form-group">
  <label for="first_name"></label></br>
  <%= f.text_field :first_name %>
 </div>

 <div class="form-group">
  <label for="last_name_kana">フリガナ</label></br>
  <%= f.text_field :last_name_kana %>
 </div>

 <div class="form-group">
  <label for="first_name_kana"></label></br>
  <%= f.text_field :first_name_kana %>
 </div>

 <div class="form-group">
  <label for="postal_code">郵便番号</label></br>
  <%= f.text_field :postal_code %>
 </div>

 <div class="form-group">
  <label for="address">住所</label></br>
  <%= f.text_field :address %>
 </div>


 <div class="form-group">
  <label for="telephone_number">電話番号</label></br>
  <%= f.text_field :telephone_number %>
 </div>

 <div class="form-group">
  <label for="email">メールアドレス</label></br>
  <%= f.text_field :email %>
 </div>

<div class="form-group">
  <label for="is_active">会員ステータス</label></br>
    <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %></br>
 </div>


 <div class="form-group">
  <%= f.submit '変更を保存' %>
 </div>
<% end %>