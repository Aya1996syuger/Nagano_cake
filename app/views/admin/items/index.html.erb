<h4>
 <span class="title">商品一覧</span><br>
</h4>

<table class="table">
 <thead>
  <tr>
   <th>商品ID</th>
   <th>商品名</th>
   <th>税抜価格</th>
   <th>ジャンル</th></th>
   <th>ステータス</th>
   <th colspan="5"></th>
  </tr>
 </thead>

  <tbody>
   <% @items.each do |item| %>
    <tr>
     <td><%= item.id %></td>
     <td>
      <%= link_to admin_item_path(item.id),class:"name" do%>
       <%= item.name %>
      <% end %>
     </td>
     <td><%= item.price %></td>
     <td><%= item.genre.name %></td>
     <td>
      <% if item.is_active == true %>
       <p class="text-green">販売中</p>
      <% else %>
       <p class="text-gray">販売停止中</p>
      <% end %>
     </td>
    </tr>
   <% end %>
  </tbody>
</table>