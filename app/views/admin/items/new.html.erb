<h4>
  <span class="title">商品新規投稿</span><br>
</h4>
<div class="container px-4 px-sm-1">
  <div class="row">
      <table class="table table-borderless">
      <!-- form_with部分 -->
        <%= form_with model: @item, url:admin_items_path(@item), local:true do |f| %>

          <tr>
            <td><%= f.label :image, '商品画像' %></td>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td><%= f.label :name, '商品名' %></td>
            <td><%= f.text_field :name ,placeholder: "商品名"%></td>
          </tr>
          <tr>
           <td><%= f.label :introduction, '商品説明' %></td>
           <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します",:size => "70*70" %></td>
          </tr>
          <tr>
           <td></td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください? --", class: 'form-control' %></td>
          </tr>
          <tr>
            <td><%= f.label :price, '税抜価格'%></td>
            <td><%= f.text_field :price, placeholder: "1000" %></td>
          <tr>
            <td></td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </td>
</table>
          <%=f.submit '新規登録', class: 'btn btn-success' %>
        <% end %>
      </div>
     </div>
  </div>
</div>