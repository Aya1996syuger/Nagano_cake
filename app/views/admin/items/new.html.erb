<h2>商品新規登録</h2>
<div class="container px-10 px-sm-0">
 <div class="row">
  <div class="col-md-2 col-md-offset-5">
    <div class="center-block">
      <!-- form_with部分 -->
      <%= form_with model: @item, url:'/admin/items', local:true do |f| %>

        <%= f.label :image, '商品画像' %>
        <%= f.attachment_field :image %>


        <%= f.label :name, '商品名' %>
        <%= f.text_field :name %>

        <%= f.label :introduction, '商品説明' %>
      　<%= f.text_area :introduction %>


        <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください？", class: 'form-control' %>


        <%= f.label :price, '税抜価格' %>
        <%= f.text_field :price %>


        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %></br>

        <%=f.submit '新規登録', class: 'btn btn-success' %>
      <% end %>
   </div>
  </div>
 </div>
</div>