<h1>管理者トップ(注文履歴一覧)</h1>
<div class="order_details">
  <table class="table table-hover table-inverse">
    <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
   </thead>


  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.name %></td>
        
      <% @cart_items.each do |cart_item| %>
         <td><%= cart_item.amount %></td>
      <% end %>
        <td>ステータス</td>
     
    <% end %>
    </tr>
  </tbody>
</table>