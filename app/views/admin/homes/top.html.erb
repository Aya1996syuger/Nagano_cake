<h1>管理者トップ(注文履歴一覧)</h1>
<div class="order_details">
    <table class="table table-hover table-inverse">
    <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colspan="3"></th>
    </tr>
   </thead>

    <tbody>
　　<% @order_detail.each do |order_detail| %>
    <tr>
      <td>
        <%= link_to  admin_order_detail_path(order),class:"name" do%>
          <%= order_detail.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%#= order.amount%></td>
      <td>ステータス</td>
    <% end %>
     </tbody>
   </table>
   </div>

